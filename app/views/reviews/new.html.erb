<h1>Write a Review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |form| %>
  <% if @review.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :rating, collection: 0..5, as: :select, prompt: 'Select a rating (0 to 5)' %>
  <%= form.input :content, as: :text, input_html: { rows: 5, placeholder: 'Write your review here...' } %>

  <div>
    <%= form.submit "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Restaurant', restaurant_path(@restaurant) %>