<div class="container mt-5">
  <h1 class="text-center mb-4">Create a New Restaurant</h1>

  <%= simple_form_for(@restaurant, html: { class: 'card p-4 shadow' }) do |form| %>
    <% if @restaurant.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.input :name, input_html: { class: 'form-control' } %>
    <%= form.input :address, input_html: { class: 'form-control' } %>
    <%= form.input :phone_number, input_html: { placeholder: 'e.g., +49 123 456 7890', class: 'form-control' } %>
    <%= form.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: 'Select a category', input_html: { class: 'form-select' } %>

    <div class="text-center mt-4">
      <%= form.submit "Create Restaurant", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-secondary" %>
  </div>
</div>