<div class="container mt-5">
  <h1 class="text-center mb-3"><%= @restaurant.name %></h1>
  
  <div class="card shadow p-4">
    <p><strong>Category:</strong> <%= @restaurant.category %></p>
    <p><strong>Address:</strong> <%= @restaurant.address %></p>
    <p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
  </div>

  <h2 class="mt-5">Reviews</h2>
  <% if @reviews.any? %>
    <ul class="list-group">
      <% @reviews.each do |review| %>
        <li class="list-group-item">
          <strong><%= review.rating %> stars:</strong> <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No reviews yet.</p>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to 'Back to Restaurants', restaurants_path, class: "btn btn-secondary me-2" %>
    <%= link_to 'Write a Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
  </div>
</div>