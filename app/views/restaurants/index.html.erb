<h1 class="text-center mb-4">All Restaurants</h1>

<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none fw-bold" %>
      <span class="badge bg-secondary"><%= restaurant.category %></span>
    </li>
  <% end %>
</ul>

<div class="mt-4 text-center">
  <%= link_to 'Create New Restaurant', new_restaurant_path, class: "btn btn-success" %>
</div>